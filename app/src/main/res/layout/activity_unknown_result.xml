<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center"
    tools:context=".UnknownResultHandler">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:divider="?android:dividerHorizontal"
        android:showDividers="end"
        android:padding="5dp">
    <ImageView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/alert"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/light_blue"
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Unknown result"/>
    </LinearLayout>
    <ScrollView
        android:layout_height="240dp"
        android:layout_width="match_parent"
        android:padding="10dp">
    <TextView
        android:id="@+id/scan_result_field"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/edt_field_design"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/copy_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/dark_blue"
            android:textAllCaps="false"
            android:text="Copy to clipboard"/>
        <Button
            android:id="@+id/text_editor_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            android:backgroundTint="@color/dark_blue"
            android:textAllCaps="false"
            android:text="Open text editor"/>
        <Button
            android:id="@+id/browser_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:backgroundTint="@color/dark_blue"
            android:textAllCaps="false"
            android:text="Search on Web"/>

    </LinearLayout>

</LinearLayout>